<%- include("header.ejs")%>
                    <div class="div-apresentacao col-9 p-subtitulo">
                        <section>
                            <h2>Pedidos</h2>
                            <div class="div-separator"></div>
                            <p>Consulte seus pedidos anteriores</p>
                        </section>
                        <section class="section-carrinho pt-4">
                            <div class="row">
                                <div class="col-12">
                                    <div class="row div-menu-carrinho">
                                        <div class="col-4 pl-5">
                                            <h3>Data Pedido</h3>
                                        </div>
                                        <div class="col-4">
                                            <h3>Produto</h3>
                                        </div>
                                        <div class="col-2 pr-5">
                                            <h3>Quantidade</h3>
                                        </div>
                                        <div class="col-2 pr-5">
                                            <h3>Valor</h3>
                                        </div>
                                    </div>
                                    <div class="div-pedidos">
                                        <div class="row">
                                        <%pedidos.forEach((item,n)=>{ %>
                                            <div class="col-4 pl-2"><p><%=item.data_compra%></p></div>
                                            <div class="col-4"><p><%=item.nome%></p></div>
                                            <div class="col-2 pr-2"><p><%=item.qnt%></p></div>
                                            <div class="col-2 pr-5"><p><%=item.valor%></p></div>
                                            </li>
                                        <% }) %>
                                    </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row align-items-center div-carrinho-total">
                                <div class="col-3 div-valor-total pr-5">
                                    <h3>Total</h3>
                                </div>
                                <div class="col-3 div-valor-total pr-5">
                                </div>
                                <div class="col-5 div-valor-total pl-4">
                                    <% if(pedidos !== undefined){ %>
                                        <h3 class="h3-valor-total"><%=pedidos[0].total%></h3>
                                    <% } %>
                                    <% if(pedidos && pedidos[0] && pedidos[0].total === undefined){ %>
                                        <h3 class="h3-valor-total"></h3>
                                    <% } %>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </section>
        </main>
    </div>
</body>
</html>